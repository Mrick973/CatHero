<% @bookings.each do |booking| %>
  <h2><%= link_to booking[:start_date], booking_path(booking)%></h2>
  <h2><%=booking[:end_date]%></h2>
  <h2><%=booking[:status]%></h2>
  <% end %>
    <hr>
    <hr>
    <h1>Animals</h1>
    <% @animals.each do |animal| %>
      <h4><%=animal[:species]%></h4>
      <h4><%=animal[:name]%></h4>
      <% end %>
        <hr>
        <hr>
        <table>
          <thead>
            <tr>
              <th> Name </th>
              <th> Email </th>
              <th> Address </th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= user.address %>
                </td>
                <td>
                  <%= link_to 'Show', class: "btn btn-primary" %>
                </td>
                <td>
                  <%= link_to 'Edit'%>
                </td>
                <td>
                  <%= link_to 'Destroy', method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
        <hr>
        <p>
          <%= link_to "Add New Booking", new_booking_path, class: "btn btn-primary" %>
        </p>